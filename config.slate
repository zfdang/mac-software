################################################################## config file of slate.# usage: #    download and put it in your home directory, and rename it to .slate# created by zfdang# https://github.com/zfdang/mac-software/blob/master/config.slate################################################################## NOTE: You can change 'hyper' alias to whatever you like.################################################################## Shortcuts (hyper + ?) available for this configuration:#  1. move and resize window#     up / down / left / right / return#     s / d / f / g / h#     tab -- use grid to resize and move window for one time, like divvy#  2. move window to previous/next monitor#     [ / ]#  3. show window hint#     a  -- use letter to switch window quickly#  4. show applications#     b - Chrome#     i - iTerm#     o - Outlook#  5. take/restore snapshot#     1 / 2 / 3 / 4################################################################## Configuration is split into the following directives:# config (for global configurations)# List of allowed configs:#   https://github.com/jigish/slate/wiki/Global-Configsconfig defaultToCurrentScreen trueconfig nudgePercentOf screenSizeconfig resizePercentOf screenSize# Aliases  (to create alias variables)# modify this if you want to change the shortcutsalias hyper ctrl;shift;alt;cmd# variables for window size and positionalias full screenOriginX;screenOriginY screenSizeX;screenSizeYalias lefthalf screenOriginX;screenOriginY screenSizeX/2;screenSizeYalias lefthalfsmall screenOriginX;screenOriginY screenSizeX/3;screenSizeYalias lefthalflarge screenOriginX;screenOriginY 2*screenSizeX/3;screenSizeYalias righthalf screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeYalias righthalfsmall screenOriginX+2*screenSizeX/3;screenOriginY screenSizeX/3;screenSizeYalias righthalflarge screenOriginX+screenSizeX/3;screenOriginY 2*screenSizeX/3;screenSizeYalias middle screenOriginX+screenSizeX/5;screenOriginY 3*screenSizeX/5;screenSizeYalias tophalf screenOriginX;screenOriginY screenSizeX;screenSizeY/2alias bottomhalf screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2# the following corners are not used at the momentalias topleft corner top-left resize:screenSizeX/2;screenSizeY/2alias topright corner top-right resize:screenSizeX/2;screenSizeY/2alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2# move and resize Bindingsbind up:${hyper} move ${tophalf}bind down:${hyper} move ${bottomhalf}bind left:${hyper} move ${lefthalf}bind right:${hyper} move ${righthalf}bind return:${hyper} move ${middle}bind s:${hyper} move ${lefthalfsmall}bind d:${hyper} move ${lefthalflarge}bind f:${hyper} move ${full}bind g:${hyper} move ${righthalflarge}bind h:${hyper} move ${righthalfsmall}# move among different screensbind [:${hyper} move ${middle} 0bind ]:${hyper} move ${middle} 1# show grid to one-off resize and move windows, like divvybind tab:${hyper} grid padding:5 1680x1050:16,9 1050x1680:9,16# Nudge Bindingsbind h:${hyper} nudge -1% +0bind l:${hyper} nudge +1% +0bind j:${hyper} nudge +0 +1%bind k:${hyper} nudge +0 -1%# Window Hints, for switch window quicklybind a:${hyper} hint QWERTYUIOP# snapshotbind 1:${hyper} snapshot snapshot1 save-to-disk;stackbind 2:${hyper} snapshot snapshot2 save-to-disk;stackbind 3:${hyper} snapshot snapshot3 save-to-disk;stackbind 4:${hyper} snapshot snapshot4 save-to-disk;stackbind 5:${hyper} activate-snapshot snapshot1 deletebind 6:${hyper} activate-snapshot snapshot2 deletebind 7:${hyper} activate-snapshot snapshot3 deletebind 8:${hyper} activate-snapshot snapshot4 delete# App Bindingsbind i:${hyper} show 'iTerm'bind b:${hyper} show 'Chrome'bind o:${hyper} show 'Outlook'