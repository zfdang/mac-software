# -G: to get colored ls output
# -p: adds a slash after each directory
# -F: which in addition puts an * after executables, | after pipes, @ after symlinks, et cetera
# -h: which will format sizes in "human readable" units, i.e. 100b 10k, 
alias ls="ls -G -p -F -h"
alias dir='ls'
alias ll='ls -l'
alias la='ls -l -a'
alias ..='cd ..'


alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias grep='grep --color -n'

alias duh='du -s ./* | sort -n | cut -f 2- | xargs du -sh'

alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

alias wgetr='wget -l1 --random-wait -r -p -e robots=off -U chrome'